# Database Configuration
DATABASE_URL="postgresql://devforge:devforge_password@localhost:5432/devforge"

# NextAuth.js Configuration
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-change-in-production-use-openssl-rand-base64-32"

# OAuth Providers (optional - remove if not using)
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GITHUB_ID="your-github-app-id"
GITHUB_SECRET="your-github-app-secret"

# AI Services Configuration
OPENAI_API_KEY="your-openai-api-key"

# Redis Configuration
REDIS_URL="redis://localhost:6379"

# Application Settings
NODE_ENV="development"
LOG_LEVEL="info"

# Security Settings
CORS_ORIGIN="http://localhost:3000"

# File Upload Settings
MAX_FILE_SIZE="10485760" # 10MB in bytes
UPLOAD_DIR="./uploads"

# Email Configuration (optional)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"
FROM_EMAIL="noreply@devforge.local"

# Webhook Configuration (optional)
WEBHOOK_SECRET="your-webhook-secret"

# Feature Flags
ENABLE_AI_FEATURES="true"
ENABLE_3D_VISUALIZATION="true"
ENABLE_VOICE_COMMANDS="false"
ENABLE_NOTIFICATIONS="true"

# Monitoring and Analytics (optional)
SENTRY_DSN=""
ANALYTICS_ID=""

# Development Settings
SKIP_ENV_VALIDATION="false"